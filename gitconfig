#
# ~/.gitconfig
#

[user]
    name = Owen Fan
    email = fanqiuwen@gmail.com

[core]
    editor = vim
    autocrlf = input
    safecrlf = true

[alias]
    br = branch
    cm = commit
    co = checkout
    di = diff
    ds = diff --staged
    lg = log --all --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
    amend = commit --amend
    amendamend = commit --amend --no-edit

[receive]
    denyCurrentBranch = updateInstead
